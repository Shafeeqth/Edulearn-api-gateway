{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "EduLearn api gateway",
  "main": "index.ts",
  "author": "Muhammed Shafeeque",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "proto:gen": "bash ./protogen.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier . --ext .js,.jsx,.ts,.tsx --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.810.0",
    "@aws-sdk/s3-request-presigner": "^3.810.0",
    "@grpc/grpc-js": "^1.13.0",
    "@grpc/proto-loader": "^0.7.13",
    "@mdshafeeq-repo/edulearn-common": "^1.0.3",
    "async-retry": "^1.3.3",
    "bcrypt": "^5.1.1",
    "bloom-filters": "^3.0.4",
    "cloudinary": "^2.6.1",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "google-protobuf": "^3.21.4",
    "helmet": "^8.1.0",
    "inversify": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "multer": "^1.4.5-lts.2",
    "node-cron": "^4.0.5",
    "opossum": "^8.4.0",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^7.0.0",
    "redis": "^4.7.0",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "ts-proto": "^2.6.1",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-session": "^2.0.49",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/google-protobuf": "^3.15.12",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.9",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}
